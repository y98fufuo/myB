<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>本棚編集</title>
        <link type="text/css" rel="stylesheet" href="/css/style.css">
        <script src="./oreder.js"></script>
    </head>
    <body>
        <header>
            <div class="header-container">
                <div class="header-left">
                    <p>書籍管理アプリ</p>
                    <a class="top-btn" href="/index">myBOOKSHELF</a>
                </div>
                <div class="header-right">
                    <a class="login" href="#">ログイン</a>
                </div>  
            </div>
        </header>
        <div class="main">
            <div class="container">
                <div class="container-header">
                    <h1>本棚</h1>
                    <a href="/index" class="index-btn">完了</a>
                   
                </div>

                    <ul class="table-body">
                        <% books.forEach((book) => { %>
                            <li>
                                <div class="book-data">
                                    <span class="book-title"><%= book.title %></span>

                                    <div class="book-menu">
                                        <div>
                                            <form action="/delete/<%= book.id %>" method="post">
                                                <input class="delete-btn" type="submit" value="削除">
                                            </form>
                                        </div>     
                                        <div>
                                            <a class="edit-btn" href="/edit/<%= book.id %>">編集</a>
                                        </div>
                                    </div>

                                    <span class="book-author"><%= book.author %></span>
                                </div>
                                
                            </li>
                        

                    </ul>    
                   
                    <% }) %>
                    <a href="/new" class="new-btn">+追加</a>
               
                
                <div class="clear"></div>   
            </div>

        </div>
        <footer>

        </footer>
    </body>
</html>
